<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/mute_local_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/pause_local_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mute_local_audio" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/mute_remote_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pause_local_video" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pause_local_video_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/local_video"
        app:layout_constraintBottom_toBottomOf="@+id/pause_local_video"
        app:layout_constraintStart_toEndOf="@+id/pause_local_video"
        app:layout_constraintTop_toTopOf="@+id/pause_local_video" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mute_local_audio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/local_audio"
        app:layout_constraintBottom_toBottomOf="@+id/mute_local_audio"
        app:layout_constraintStart_toEndOf="@+id/mute_local_audio"
        app:layout_constraintTop_toTopOf="@+id/mute_local_audio" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mute_remote_audio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscribe_to_remote_audio"
        app:layout_constraintBottom_toBottomOf="@+id/mute_remote_audio"
        app:layout_constraintStart_toEndOf="@+id/mute_remote_audio"
        app:layout_constraintTop_toTopOf="@+id/mute_remote_audio" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/pause_remote_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mute_remote_audio" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pause_remote_video_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscribe_to_remote_video"
        app:layout_constraintBottom_toBottomOf="@+id/pause_remote_video"
        app:layout_constraintStart_toEndOf="@+id/pause_remote_video"
        app:layout_constraintTop_toTopOf="@+id/pause_remote_video" />


</androidx.constraintlayout.widget.ConstraintLayout>